<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<div class="container-xl">
  <!-- Page title -->
  <div class="page-header d-print-none">
    <div class="row align-items-center"></div>
  </div>
</div>
<div class="page-body">
  <div class="container-xl">
    <div class="col">
      <div class="page-header d-print-none">
        <div class="row align-items-center">
          <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">Departments</div>
            <h2 class="page-title">List</h2>
          </div>
          <!-- Page title actions -->
          <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
              <a
                href="#"
                class="btn btn-primary d-none d-sm-inline-block"
                data-bs-toggle="modal"
                data-bs-target="#create-department-modal"
              >
                <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="icon"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  stroke-width="2"
                  stroke="currentColor"
                  fill="none"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <line x1="12" y1="5" x2="12" y2="19" />
                  <line x1="5" y1="12" x2="19" y2="12" />
                </svg>
                Create new department
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12">
        <div class="card">
          <div class="table-responsive">
            <table class="table table-vcenter table-mobile-md card-table">
              <thead>
                <tr>
                  <th>Department</th>
                  <th>Description</th>
                  <th class="w-1"></th>
                </tr>
              </thead>
              <tbody>
                <% for(let department of departments) { %>
                <tr>
                  <td data-label="Name">
                    <div class="d-flex py-1 align-items-center">
                      <span class="avatar me-2"><%= department.abbrev %></span>
                      <div class="flex-fill">
                        <div class="font-weight-medium">
                          <%= department.title %>
                        </div>
                        <div class="text-muted">
                          <a href="#" class="text-reset"
                            ><%= department._id %></a
                          >
                        </div>
                      </div>
                    </div>
                  </td>
                  <td data-label="Name">
                    <div class="d-flex py-1 align-items-center">
                      <div class="flex-fill">
                        <div class="font-weight-medium">
                          <%= department.description %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td>
                    <div class="btn-list flex-nowrap">
                      <a
                        href="#"
                        data-id="<%= department._id %>"
                        class="btn btn-primary EditDepartmentBtn"
                        data-bs-toggle="modal"
                        data-bs-target="#edit-department-modal"
                        aria-label="Edit department"
                      >
                        Edit
                      </a>
                      <a
                        href="#"
                        data-id="<%= department._id %>"
                        class="btn btn-danger"
                        onclick="setId(event)"
                        data-bs-toggle="modal"
                        data-bs-target="#modal-danger"
                      >
                        Remove
                      </a>
                    </div>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div
  class="modal modal-blur fade"
  id="create-department-modal"
  tabindex="-1"
  department="dialog"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg" department="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New Department</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-lg-12">
            <div class="mb-3">
              <label class="form-label">Title</label>
              <div class="row g-2">
                <div class="col">
                  <input
                    type="text"
                    name="title"
                    id="createtitle"
                    class="form-control"
                    placeholder="Enter title"
                  />
                </div>
                <div class="col-auto align-self-center">
                  <span
                    class="form-help"
                    data-bs-toggle="popover"
                    data-bs-placement="top"
                    data-bs-content="<p>Enter title for department</p> "
                    data-bs-html="true"
                    >?</span
                  >
                </div>
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label">Description</label>
              <div class="row g-2">
                <div class="col">
                  <input
                    type="text"
                    name="description"
                    id="createdescription"
                    class="form-control"
                    placeholder="Enter description"
                  />
                </div>
                <div class="col-auto align-self-center">
                  <span
                    class="form-help"
                    data-bs-toggle="popover"
                    data-bs-placement="top"
                    data-bs-content="<p>Enter description for department</p> "
                    data-bs-html="true"
                    >?</span
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">
          Cancel
        </a>
        <a href="#" class="btn btn-primary ms-auto" id="CreateDepartmentBtn">
          <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <line x1="12" y1="5" x2="12" y2="19" />
            <line x1="5" y1="12" x2="19" y2="12" />
          </svg>
          Create new department
        </a>
      </div>
    </div>
  </div>
</div>
<div
  class="modal modal-blur fade"
  id="edit-department-modal"
  tabindex="-1"
  department="dialog"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg" department="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit department</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <div class="modal-body">
        <div class="row">
          <div class="col-lg-12">
            <div class="mb-3">
              <label class="form-label">Title</label>
              <div class="row g-2">
                <div class="col">
                  <input
                    type="text"
                    name="title"
                    id="edittitle"
                    class="form-control"
                    placeholder="Enter title"
                  />
                </div>
                <div class="col-auto align-self-center">
                  <span
                    class="form-help"
                    data-bs-toggle="popover"
                    data-bs-placement="top"
                    data-bs-content="<p>Enter title for department</p> "
                    data-bs-html="true"
                    >?</span
                  >
                </div>
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label">Description</label>
              <div class="row g-2">
                <div class="col">
                  <input
                    type="text"
                    name="description"
                    id="editdescription"
                    class="form-control"
                    placeholder="Enter description"
                  />
                  <input type="hidden" id="editid" />
                </div>
                <div class="col-auto align-self-center">
                  <span
                    class="form-help"
                    data-bs-toggle="popover"
                    data-bs-placement="top"
                    data-bs-content="<p>Enter description for department</p> "
                    data-bs-html="true"
                    >?</span
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">
          Cancel
        </a>
        <a href="#" class="btn btn-primary ms-auto" id="UpdateDepartmentBtn">
          <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <line x1="12" y1="5" x2="12" y2="19" />
            <line x1="5" y1="12" x2="19" y2="12" />
          </svg>
          Update
        </a>
      </div>
    </div>
  </div>
</div>

<div
  class="modal modal-blur fade"
  id="modal-danger"
  tabindex="-1"
  department="dialog"
  aria-hidden="true"
>
  <div
    class="modal-dialog modal-sm modal-dialog-centered"
    department="document"
  >
    <div class="modal-content">
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="modal"
        aria-label="Close"
      ></button>
      <div class="modal-status bg-danger"></div>
      <div class="modal-body text-center py-4">
        <!-- Download SVG icon from http://tabler-icons.io/i/alert-triangle -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="icon mb-2 text-danger icon-lg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none" />
          <path d="M12 9v2m0 4v.01" />
          <path
            d="M5 19h14a2 2 0 0 0 1.84 -2.75l-7.1 -12.25a2 2 0 0 0 -3.5 0l-7.1 12.25a2 2 0 0 0 1.75 2.75"
          />
        </svg>
        <h3>Are you sure?</h3>
        <div class="text-muted">
          Do you really want to remove this department?
        </div>
      </div>
      <div class="modal-footer">
        <div class="w-100">
          <div class="row">
            <div class="col">
              <a href="#" class="btn w-100" data-bs-dismiss="modal"> Cancel </a>
            </div>
            <div class="col">
              <a href="#" class="btn btn-danger w-100 DeleteDepartmentBtn">
                Remove
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
