<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<div class="container-xl">
  <!-- Page title -->
  <div class="page-header d-print-none">
    <div class="row align-items-center"></div>
  </div>
</div>
<div class="page-body">
  <div class="container-xl">
    <div class="col">
      <div class="page-header d-print-none">
        <div class="row align-items-center">
          <div class="col">
            <!-- Page pre-title -->
            <div class="page-pretitle">Designations</div>
            <h2 class="page-title">List</h2>
          </div>
          <!-- Page title actions -->
          <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
              <a
                href="#"
                class="btn btn-primary d-none d-sm-inline-block"
                data-bs-toggle="modal"
                data-bs-target="#create-designation-modal"
              >
                <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="icon"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  stroke-width="2"
                  stroke="currentColor"
                  fill="none"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <line x1="12" y1="5" x2="12" y2="19" />
                  <line x1="5" y1="12" x2="19" y2="12" />
                </svg>
                Create new designation
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12">
        <div class="card">
          <div class="table-responsive">
            <table
              class="table table-vcenter table-hover table-mobile-md card-table"
            >
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Description</th>
                  <th>Department</th>
                  <th>Staff Type</th>
                  <th>Salary</th>
                  <th class="w-1"></th>
                </tr>
              </thead>
              <tbody>
                <% for(let designation of designations) { %>
                <tr>
                  <td data-label="Name">
                    <div class="d-flex py-1 align-items-center">
                      <span class="avatar me-2"><%= designation.abbrev %></span>
                      <div class="flex-fill">
                        <div class="font-weight-medium">
                          <%= designation.title %>
                        </div>
                        <div class="text-muted">
                          <a href="#" class="text-reset"
                            ><%= designation._id %></a
                          >
                        </div>
                      </div>
                    </div>
                  </td>
                  <td data-label="Name">
                    <div class="d-flex py-1 align-items-center">
                      <div class="flex-fill">
                        <div class="font-weight-medium">
                          <%= designation.description %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td data-label="Name">
                    <div class="d-flex py-1 align-items-center">
                      <div class="flex-fill">
                        <div class="font-weight-medium">
                          <%= designation.department.title %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td data-label="Name">
                    <div class="d-flex py-1 align-items-center">
                      <div class="flex-fill">
                        <div class="font-weight-medium">
                          <%= designation.staffType %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td data-label="Name">
                    <div class="d-flex py-1 align-items-center">
                      <div class="flex-fill">
                        <div class="font-weight-medium">
                          <%= designation.salary %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td>
                    <div class="btn-list flex-nowrap">
                      <a
                        href="#"
                        data-id="<%= designation._id %>"
                        class="btn btn-primary EditDesignationBtn"
                        data-bs-toggle="modal"
                        data-bs-target="#edit-designation-modal"
                        aria-label="Edit designation"
                      >
                        Edit
                      </a>
                      <a
                        href="#"
                        data-id="<%= designation._id %>"
                        class="btn btn-danger"
                        onclick="setId(event)"
                        data-bs-toggle="modal"
                        data-bs-target="#modal-danger"
                      >
                        Remove
                      </a>
                    </div>
                  </td>
                </tr>

                <tr>
                  <td data-label="Name" colspan="5">
                    <div class="table-responsive">
                      <table
                        class="table table-bordered table-vcenter table-mobile-md card-table"
                      >
                        <thead>
                          <tr>
                            <th>Benefit</th>
                            <th>Amount</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% for(let benefit of designation.benefits) { %>
                          <tr>
                            <td><%= benefit.benefit %></td>
                            <td><%= benefit.amount %></td>
                          </tr>
                          <% }%>
                        </tbody>
                      </table>
                    </div>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div
  class="modal modal-blur fade"
  id="create-designation-modal"
  tabindex="-1"
  designation="dialog"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg" designation="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New Designation</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-lg-12">
            <div class="mb-3">
              <label class="form-label">Title</label>
              <div class="row g-2">
                <div class="col">
                  <input
                    type="text"
                    name="title"
                    id="createtitle"
                    class="form-control"
                    placeholder="Enter title"
                  />
                </div>
                <div class="col-auto align-self-center">
                  <span
                    class="form-help"
                    data-bs-toggle="popover"
                    data-bs-placement="top"
                    data-bs-content="<p>Enter title for designation</p> "
                    data-bs-html="true"
                    >?</span
                  >
                </div>
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label">Description</label>
              <div class="row g-2">
                <div class="col">
                  <input
                    type="text"
                    name="description"
                    id="createdescription"
                    class="form-control"
                    placeholder="Enter description"
                  />
                </div>
                <div class="col-auto align-self-center">
                  <span
                    class="form-help"
                    data-bs-toggle="popover"
                    data-bs-placement="top"
                    data-bs-content="<p>Enter description for designation</p> "
                    data-bs-html="true"
                    >?</span
                  >
                </div>
              </div>
            </div>
            <label class="form-label">Staff Type</label>
            <div class="form-selectgroup-boxes row mb-3">
              <div class="col-lg-6">
                <label class="form-selectgroup-item">
                  <input
                    type="radio"
                    name="staffType"
                    value="FullTime"
                    class="form-selectgroup-input"
                    class="form-selectgroup-input createStaffType"
                  />
                  <span
                    class="form-selectgroup-label d-flex align-items-center p-3"
                  >
                    <span class="me-3">
                      <span class="form-selectgroup-check"></span>
                    </span>
                    <span class="form-selectgroup-label-content">
                      <span class="form-selectgroup-title strong mb-1"
                        >Full-time</span
                      >
                      <span class="d-block text-muted"
                        >Permanent member of the organisation</span
                      >
                    </span>
                  </span>
                </label>
              </div>
              <div class="col-lg-6">
                <label class="form-selectgroup-item">
                  <input
                    type="radio"
                    name="staffType"
                    value="PartTime"
                    class="form-selectgroup-input createStaffType"
                  />
                  <span
                    class="form-selectgroup-label d-flex align-items-center p-3"
                  >
                    <span class="me-3">
                      <span class="form-selectgroup-check"></span>
                    </span>
                    <span class="form-selectgroup-label-content">
                      <span class="form-selectgroup-title strong mb-1"
                        >Part-time</span
                      >
                      <span class="d-block text-muted"
                        >Temporary member of the organisation</span
                      >
                    </span>
                  </span>
                </label>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-4">
                <div class="mb-3">
                  <label class="form-label">Department</label>
                  <select class="form-select" id="createdepartment">
                    <option>-- Select Department --</option>
                    <% for(let department of departments){%>
                    <option value="<%= department._id %>">
                      <%= department.title %>
                    </option>
                    <% }%>
                  </select>
                </div>
              </div>
              <div class="col-lg-8">
                <div class="mb-3">
                  <label class="form-label">Salary </label>
                  <div class="input-group input-group-flat">
                    <span class="input-group-text"> ₦ </span>
                    <input
                      type="text"
                      class="form-control ps-0"
                      id="createsalary"
                      value=""
                      autocomplete="off"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-lg-12">
            <label class="form-label">Extra Benefits </label>
            <div class="row">
              <div class="col-lg-4">
                <div class="mb-3">
                  <label class="form-label">Benefit</label>
                  <select class="form-select" id="createbenefit">
                    <option>-- Select Benefit --</option>
                    <% for(let benefit of benefits){%>
                    <option value="<%= benefit %>"><%= benefit %></option>
                    <% }%>
                  </select>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="mb-3">
                  <label class="form-label">Amount </label>
                  <div class="input-group input-group-flat">
                    <span class="input-group-text"> ₦ </span>
                    <input
                      type="text"
                      class="form-control ps-0"
                      id="createamount"
                      value=""
                      autocomplete="off"
                    />
                  </div>
                </div>
              </div>
              <div class="col-lg-2">
                <label class="form-label">Action</label>
                <button
                  class="btn btn-primary addBenefit"
                  data-command="create"
                  type="button"
                >
                  Add
                </button>
              </div>
              <div class="col-lg-12">
                <div class="table-responsive">
                  <table class="table table-vcenter table-mobile-md card-table">
                    <thead>
                      <tr>
                        <th>Benefit</th>
                        <th>Amount</th>
                        <th class="w-1"></th>
                      </tr>
                    </thead>
                    <tbody id="createbenefitTbl"></tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">
          Cancel
        </a>
        <a href="#" class="btn btn-primary ms-auto" id="CreateDesginationBtn">
          <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <line x1="12" y1="5" x2="12" y2="19" />
            <line x1="5" y1="12" x2="19" y2="12" />
          </svg>
          Create new designation
        </a>
      </div>
    </div>
  </div>
</div>
